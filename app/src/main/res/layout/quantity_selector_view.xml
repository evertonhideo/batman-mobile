<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
	android:gravity="center"
	android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:padding="15dp">

	<Button
		android:id="@+id/btDecrement"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:textColor="@color/colorWhite"
		android:text="@string/subtraction_signal"
		android:enabled="false"
		android:background="@drawable/selector_quantity_button"/>

	<TextView
		android:id="@+id/tvCurrentValue"
		android:layout_width="100dp"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_marginStart="25dp"
		android:layout_marginEnd="25dp"
		android:textSize="25sp"
		android:text="@string/digit_zero"/>

	<Button
		android:id="@+id/btIncrement"
		android:layout_width="42dp"
		android:layout_height="42dp"
		android:textColor="@color/colorWhite"
		android:text="@string/sum_signal"
		android:background="@drawable/selector_quantity_button"/>

</LinearLayout>