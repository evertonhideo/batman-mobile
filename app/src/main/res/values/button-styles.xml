<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="DesignSystem.Button.Default" parent="Widget.AppCompat.Button">
		<item name="android:textSize">16sp</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="DesignSystem.Button.Primary" parent="DesignSystem.Button.Default">
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:background">@drawable/primary_button_selector</item>
	</style>

	<style name="DesignSystem.Button.Secondary" parent="DesignSystem.Button.Default">
		<item name="android:textColor">@color/colorGray</item>
		<item name="android:background">@drawable/secondary_button_selector</item>
	</style>

	<style name="DesignSystem.Button.Login" parent="DesignSystem.Button.Default">
		<item name="android:textColor">@color/colorWhite</item>
		<item name="android:background">@drawable/selector_login_button</item>
	</style>

</resources>