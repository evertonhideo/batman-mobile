<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/iti_gradient</item>
    </style>

    <style name="AppTheme.splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/bg_splash_theme</item>
    </style>

    <style name="AppTheme.NoToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/iti_gradient</item>
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="DesignSystem.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/DesignSystem.Toolbar.TextAppearance</item>
    </style>

    <style name="DesignSystem.Navigationbar.Style" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/DesignSystem.Toolbar.TextAppearance</item>
        <item name="android:background">@color/colorGreen</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="DesignSystem.Toolbar.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignSystem.Button.Default" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_button</item>
    </style>

    <style name="DesignSystem.Button.White" parent="DesignSystem.Button.Default">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:background">@drawable/bg_white_button</item>
    </style>

    <style name="DesignSystem.Button.Black" parent="DesignSystem.Button.Default">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <style name="DesignSystem.Button.Text" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DesignSystem.Text.Default" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DesignSystem.Text.H2" parent="DesignSystem.Text.Default">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DesignSystem.Text.H3" parent="DesignSystem.Text.Default">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DesignSystem.Text.helloWord" parent="DesignSystem.Text.Default">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignSystem.Text.NetworkImage" parent="DesignSystem.Text.Default">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DesignSystem.Button.Style" parent="DesignSystem.Text.Default">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="DesignSystem.Stylish.Button" parent="DesignSystem.Text.Default">
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DesignSystem.Stylish.ButtonAndAppearance" parent="DesignSystem.Text.Default">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignSystem.Text.Action.Click" parent="DesignSystem.Text.Default">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignSystem.Form.Submit" parent="DesignSystem.Text.Default">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/bg_form_button</item>
    </style>

</resources>
