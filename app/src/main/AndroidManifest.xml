<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.marketitiplace">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="br.com.zup.beagle.sample.BeagleUiSampleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoToolbar">
        <activity android:name=".SplashActivity" android:theme="@style/AppTheme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".SampleServerDrivenActivity"/>

    </application>

</manifest>